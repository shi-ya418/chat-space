.SideBar
  .Header
    .Header__items
      .Header__items__userName
        = current_user.name
      .Header__items__icon 
        = link_to new_group_path do
          = icon('fas', 'edit')
        = link_to "" do
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .Header__groupList
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group__name
            = group.name
          .Group__message 
            = group.show_last_message
 
